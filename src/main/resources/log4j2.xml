<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">src/main/logs</Property>
	</Properties>
	<Appenders>
		<File name="FILE" fileName="${basePath}/logging.log" append="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} | %-5p | [%t] | %C{2} (%F:%L) - %m%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p | [%t] | %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.fdmgroup.creditocube" level="debug" />
		<Root level="info">
			<AppenderRef ref="STDOUT" level="WARN" />
			<AppenderRef ref="FILE" />
		</Root>
	</Loggers>
</Configuration>